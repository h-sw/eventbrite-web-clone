.container-fluid
  nav.navbar.navbar-toggleable-md.navbar-light.bg-faded
    button.navbar-toggler.navbar-toggler-right(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
      span.navbar-toggler-icon
    a.navbar-brand.main-title(href="/") Eventbrite
    #navbarNav.collapse.navbar-collapse
      ul.navbar-nav.ml-auto
        li.nav-item
          a.nav-link(href="/event") BROWSE EVENT
        if (!currentUser)
          li.nav-item
            a.nav-link(href="/signin") SIGN IN
          li.nav-item
            a.nav-link(href="/users/new") SIGN UP
        else if (currentUser.root == false)
          li.nav-item
            a.nav-link(href="/signout") SIGN OUT
          li.nav-item
            a.nav-link(href=`/users/${currentUser.id}`)= currentUser.name
          
          li.nav-item.create-event
            a.nav-link(href="../event/new") CREATE EVENT
        else
          li.nav-item
            a.nav-link(href="/signout") SIGN OUT
          li.nav-item
            a.nav-link(href="/users") MANAGEMENT
          li.nav-item.create-event
            a.nav-link(href="../event/new") CREATE EVENT